<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bitcamp.Mapper.ContactMapper">

	<select id="contactlist" resultType="com.bitcamp.DTO.ContactDTO">
	select hno, b.no, htitle, hcontent, hdate
		from help as a
		left join member as b
		on a.no = b.no
	</select>

	<insert id="contactinsert"
		parameterType="com.bitcamp.DTO.ContactDTO">
		insert into help (no,htitle,hcontent,hdate)
		values (#{no},#{htitle},#{hcontent},sysdate())
	</insert>
	
	<select id="contactdetail" parameterType="int" resultType="com.bitcamp.DTO.ContactDTO">
	select hno, b.no, htitle, hcontent, hdate
		from help as a
		left join member as b
		on a.no = b.no
		where hno=#{hno}
	</select>
	
<delete id="contactdelete" parameterType="int">
delete from help
where hno=#{hno}
</delete>

</mapper>